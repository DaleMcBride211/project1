<%- include('partials/header') %>
<main>
    <div class="course-header">
        <h1><%= course.title %></h1>
        <p class="course-meta"><%= course.id %> â€¢ <%= course.credits %> credits</p>
        <p class="course-description"><%= course.description %></p>
    </div>
    <div class="sections">
        <h2>Available Sections</h2>
        <div class="section-list">
            <% course.sections.forEach(section => { %>
                <div class="section-card">
                    <div class="section-time"><%= section.time %></div>
                    <div class="section-room">Room: <%= section.room %></div>
                    <div class="section-professor">Instructor: <%= section.professor %></div>
                </div>
            <% }); %>
        </div>
    </div>
    <section class="debug-panel">
        <h3>Query Parameter Debugger</h3>
        <p>Current Query Parameters: <code><%= JSON.stringify(queryParams) %></code></p>
        
        <% if (queryParams.sort) { %>
            <p><strong>Sorting by:</strong> <%= queryParams.sort %></p>
        <% } %>
    </section>
    <div class="navigation">
        <p><a href="/catalog">&larr; Back to Course Catalog</a></p>
    </div>
</main>
<%- include('partials/footer') %>